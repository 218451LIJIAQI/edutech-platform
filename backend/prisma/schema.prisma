// Prisma Schema for Edutech Platform
// This schema defines the complete database structure

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================================
// ENUMS
// ================================

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum CourseType {
  LIVE       // Online live sessions
  RECORDED   // Pre-recorded video courses
  HYBRID     // Mix of live and recorded
}

enum LessonType {
  LIVE
  RECORDED
  HYBRID
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  REFUNDED
  FAILED
}

enum ReportStatus {
  OPEN
  UNDER_REVIEW
  RESOLVED
  DISMISSED
}

enum ReportType {
  QUALITY_ISSUE
  INAPPROPRIATE_CONTENT
  FRAUD
  TECHNICAL_ISSUE
  OTHER
}

enum LiveSessionStatus {
  SCHEDULED
  ONGOING
  COMPLETED
  CANCELLED
}

enum RefundStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
  PROCESSING
}

enum RefundMethod {
  ORIGINAL_PAYMENT
  WALLET
  BANK_TRANSFER
}

enum SupportTicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum SupportTicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
}

// ================================
// USER MANAGEMENT
// ================================

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  role      UserRole @default(STUDENT)
  avatar    String?
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  teacherProfile   TeacherProfile?
  enrollments      Enrollment[]
  reviewsGiven     Review[]        @relation("ReviewsGiven")
  reviewsReceived  Review[]        @relation("ReviewsReceived")
  reportsSubmitted Report[]        @relation("ReportsSubmitted")
  reportsAgainst   Report[]        @relation("ReportsAgainst")
  payments         Payment[]
  notifications    Notification[]
  cartItems        CartItem[]
  orders           Order[]
  communityPosts   CommunityPost[]
  communityComments CommunityComment[]
  communityLikes   CommunityPostLike[]
  communityBookmarks CommunityPostBookmark[]
  followers        CommunityFollowing[]   @relation("Followers")
  following        CommunityFollowing[]   @relation("Following")
  supportTickets   SupportTicket[]
  supportMessages  SupportTicketMessage[]

  @@map("users")
}

// ================================
// TEACHER PROFILES & VERIFICATION
// ================================

model TeacherProfile {
  id                    String                 @id @default(uuid())
  userId                String                 @unique @map("user_id")
  bio                   String?
  headline              String?
  hourlyRate            Float?                 @map("hourly_rate")
  totalStudents         Int                    @default(0) @map("total_students")
  averageRating         Float                  @default(0) @map("average_rating")
  totalEarnings         Float                  @default(0) @map("total_earnings")
  isVerified            Boolean                @default(false) @map("is_verified")
  verificationStatus    VerificationStatus     @default(PENDING) @map("verification_status")
  registrationStatus    RegistrationStatus     @default(PENDING) @map("registration_status")
  
  // Extended Profile Fields
  selfIntroduction      String?                @map("self_introduction")
  educationBackground   String?                @map("education_background")
  teachingExperience    String?                @map("teaching_experience")
  awards                String?                // JSON array of awards
  specialties           String?                // JSON array of specialties
  teachingStyle         String?                @map("teaching_style")
  languages             String?                // JSON array of languages
  yearsOfExperience     Int?                   @map("years_of_experience")
  profilePhoto          String?                @map("profile_photo")
  certificatePhotos     String?                @map("certificate_photos") // JSON array of certificate photo URLs
  
  // Profile Completion Status
  profileCompletionStatus String               @default("INCOMPLETE") @map("profile_completion_status") // INCOMPLETE, PENDING_REVIEW, APPROVED, REJECTED
  profileSubmittedAt    DateTime?              @map("profile_submitted_at")
  profileReviewedAt     DateTime?              @map("profile_reviewed_at")
  profileReviewNotes    String?                @map("profile_review_notes")
  
  createdAt             DateTime               @default(now()) @map("created_at")
  updatedAt             DateTime               @updatedAt @map("updated_at")

  // Relations
  user                  User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  verifications         TeacherVerification[]
  courses               Course[]
  certifications        Certification[]
  profileSubmissions    TeacherProfileSubmission[]

  @@map("teacher_profiles")
}

model TeacherVerification {
  id               String             @id @default(uuid())
  teacherProfileId String             @map("teacher_profile_id")
  documentType     String             @map("document_type")
  documentUrl      String             @map("document_url")
  status           VerificationStatus @default(PENDING)
  reviewedBy       String?            @map("reviewed_by")
  reviewNotes      String?            @map("review_notes")
  submittedAt      DateTime           @default(now()) @map("submitted_at")
  reviewedAt       DateTime?          @map("reviewed_at")

  teacherProfile TeacherProfile @relation(fields: [teacherProfileId], references: [id], onDelete: Cascade)

  @@map("teacher_verifications")
}

// Teacher Profile Submission for tracking profile completion submissions
model TeacherProfileSubmission {
  id               String             @id @default(uuid())
  teacherProfileId String             @map("teacher_profile_id")
  status           VerificationStatus @default(PENDING)
  submittedAt      DateTime           @default(now()) @map("submitted_at")
  reviewedBy       String?            @map("reviewed_by")
  reviewedAt       DateTime?          @map("reviewed_at")
  reviewNotes      String?            @map("review_notes")
  payload          Json?              @map("payload")
  
  teacherProfile   TeacherProfile     @relation(fields: [teacherProfileId], references: [id], onDelete: Cascade)

  @@map("teacher_profile_submissions")
}

model Certification {
  id               String    @id @default(uuid())
  teacherProfileId String    @map("teacher_profile_id")
  title            String
  issuer           String
  issueDate        DateTime  @map("issue_date")
  expiryDate       DateTime? @map("expiry_date")
  credentialId     String?   @map("credential_id")
  credentialUrl    String?   @map("credential_url")
  createdAt        DateTime  @default(now()) @map("created_at")

  teacherProfile TeacherProfile @relation(fields: [teacherProfileId], references: [id], onDelete: Cascade)

  @@map("certifications")
}

// ================================
// COURSE & LESSON MANAGEMENT
// ================================

model Course {
  id               String     @id @default(uuid())
  teacherProfileId String     @map("teacher_profile_id")
  title            String
  description      String
  category         String
  courseType       CourseType @default(RECORDED) @map("course_type")
  thumbnail        String?
  previewVideoUrl  String?    @map("preview_video_url")
  isPublished      Boolean    @default(false) @map("is_published")
  createdAt        DateTime   @default(now()) @map("created_at")
  updatedAt        DateTime   @updatedAt @map("updated_at")

  teacherProfile TeacherProfile  @relation(fields: [teacherProfileId], references: [id], onDelete: Cascade)
  lessons        Lesson[]
  packages       LessonPackage[]
  materials      Material[]

  @@map("courses")
}

model Lesson {
  id          String     @id @default(uuid())
  courseId    String     @map("course_id")
  title       String
  description String?
  type        LessonType
  duration    Int?
  videoUrl    String?    @map("video_url")
  orderIndex  Int        @map("order_index")
  isFree      Boolean    @default(false) @map("is_free")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  course       Course        @relation(fields: [courseId], references: [id], onDelete: Cascade)
  liveSessions LiveSession[]

  @@map("lessons")
}

model LessonPackage {
  id          String   @id @default(uuid())
  courseId    String   @map("course_id")
  name        String
  description String?
  price       Float
  discount    Float?   @default(0)
  finalPrice  Float    @map("final_price")
  duration    Int?
  maxStudents Int?     @map("max_students")
  features    Json?
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  course      Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  enrollments Enrollment[]
  payments    Payment[]
  cartItems   CartItem[]
  orderItems  OrderItem[]

  @@map("lesson_packages")
}

// ================================
// ENROLLMENT & PAYMENT
// ================================

model Enrollment {
  id               String    @id @default(uuid())
  userId           String    @map("user_id")
  packageId        String    @map("package_id")
  enrolledAt       DateTime  @default(now()) @map("enrolled_at")
  expiresAt        DateTime? @map("expires_at")
  progress         Int       @default(0)
  completedLessons Int       @default(0) @map("completed_lessons")
  isActive         Boolean   @default(true) @map("is_active")

  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  package LessonPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)

  review Review?

  @@unique([userId, packageId])
  @@map("enrollments")
}

model Payment {
  id                 String        @id @default(uuid())
  userId             String        @map("user_id")
  packageId          String?       @map("package_id")
  orderId            String?       @unique @map("order_id")
  amount             Float
  platformCommission Float         @map("platform_commission")
  teacherEarning     Float         @map("teacher_earning")
  currency           String        @default("USD")
  stripePaymentId    String?       @unique @map("stripe_payment_id")
  status             PaymentStatus @default(PENDING)
  paidAt             DateTime?     @map("paid_at")
  createdAt          DateTime      @default(now()) @map("created_at")

  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  package LessonPackage?  @relation(fields: [packageId], references: [id], onDelete: Cascade)
  order   Order?          @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("payments")
}

// ================================
// CART & ORDERS
// ================================

model CartItem {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  packageId String   @map("package_id")
  quantity  Int      @default(1)
  addedAt   DateTime @default(now()) @map("added_at")

  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  package LessonPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)

  @@unique([userId, packageId])
  @@map("cart_items")
}

model Order {
  id           String      @id @default(uuid())
  orderNo      String      @unique @map("order_no")
  userId       String      @map("user_id")
  status       OrderStatus @default(PENDING)
  totalAmount  Float
  currency     String      @default("USD")
  createdAt    DateTime    @default(now()) @map("created_at")
  paidAt       DateTime?   @map("paid_at")
  canceledAt   DateTime?   @map("canceled_at")
  cancelReason String?     @map("cancel_reason")
  refundedAt   DateTime?   @map("refunded_at")
  refundAmount Float?      @map("refund_amount")
  refundReason String?     @map("refund_reason")

  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items   OrderItem[]
  payment Payment?
  refunds Refund[]

  @@map("orders")
}

model OrderItem {
  id         String @id @default(uuid())
  orderId    String @map("order_id")
  packageId  String @map("package_id")
  price      Float
  discount   Float? @default(0)
  finalPrice Float  @map("final_price")

  order   Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  package LessonPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

model Refund {
  id              String        @id @default(uuid())
  orderId         String        @map("order_id")
  amount          Float
  reason          String?
  reasonCategory  String?       @map("reason_category") // e.g., "QUALITY_ISSUE", "CHANGED_MIND", "TECHNICAL_ISSUE"
  status          RefundStatus  @default(PENDING)
  refundMethod    RefundMethod  @default(ORIGINAL_PAYMENT) @map("refund_method")
  bankDetails     String?       @map("bank_details") // JSON string for bank transfer details
  notes           String?
  createdAt       DateTime      @default(now()) @map("created_at")
  processedAt     DateTime?     @map("processed_at")
  completedAt     DateTime?     @map("completed_at")

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("refunds")
}

// Support Tickets for Customer Service
model SupportTicket {
  id          String                 @id @default(uuid())
  ticketNo    String                 @unique @map("ticket_no")
  userId      String                 @map("user_id")
  orderId     String?                @map("order_id")
  subject     String
  description String
  category    String // e.g., "REFUND", "TECHNICAL", "QUALITY", "OTHER"
  priority    SupportTicketPriority  @default(MEDIUM)
  status      SupportTicketStatus    @default(OPEN)
  assignedTo  String?                @map("assigned_to") // admin user id
  resolution  String?
  createdAt   DateTime               @default(now()) @map("created_at")
  updatedAt   DateTime               @updatedAt @map("updated_at")
  resolvedAt  DateTime?              @map("resolved_at")

  user     User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages SupportTicketMessage[]

  @@map("support_tickets")
}

// Support Ticket Messages for chat-like communication
model SupportTicketMessage {
  id        String   @id @default(uuid())
  ticketId  String   @map("ticket_id")
  senderId  String   @map("sender_id")
  message   String
  attachment String? // file URL
  createdAt DateTime @default(now()) @map("created_at")

  ticket SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  sender User          @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@map("support_ticket_messages")
}

// ================================
// REVIEWS & RATINGS
// ================================

model Review {
  id           String   @id @default(uuid())
  enrollmentId String   @unique @map("enrollment_id")
  reviewerId   String   @map("reviewer_id")
  teacherId    String   @map("teacher_id")
  rating       Int
  comment      String?
  isPublished  Boolean  @default(true) @map("is_published")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  enrollment Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  reviewer   User       @relation("ReviewsGiven", fields: [reviewerId], references: [id], onDelete: Cascade)
  teacher    User       @relation("ReviewsReceived", fields: [teacherId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

// ================================
// REPORTS & COMPLAINTS
// ================================

model Report {
  id          String       @id @default(uuid())
  reporterId  String       @map("reporter_id")
  reportedId  String       @map("reported_id")
  type        ReportType
  description String
  status      ReportStatus @default(OPEN)
  resolution  String?
  createdAt   DateTime     @default(now()) @map("created_at")
  resolvedAt  DateTime?    @map("resolved_at")

  reporter User @relation("ReportsSubmitted", fields: [reporterId], references: [id], onDelete: Cascade)
  reported User @relation("ReportsAgainst", fields: [reportedId], references: [id], onDelete: Cascade)

  @@map("reports")
}

// ================================
// MATERIALS
// ================================

model Material {
  id             String   @id @default(uuid())
  courseId       String   @map("course_id")
  title          String
  description    String?
  fileUrl        String   @map("file_url")
  fileType       String   @map("file_type")
  fileSize       Int      @map("file_size")
  isDownloadable Boolean  @default(true) @map("is_downloadable")
  uploadedAt     DateTime @default(now()) @map("uploaded_at")

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("materials")
}

// ================================
// LIVE SESSIONS
// ================================

model LiveSession {
  id              String            @id @default(uuid())
  lessonId        String            @map("lesson_id")
  title           String
  description     String?
  scheduledAt     DateTime          @map("scheduled_at")
  startedAt       DateTime?         @map("started_at")
  endedAt         DateTime?         @map("ended_at")
  duration        Int?
  meetingUrl      String?           @map("meeting_url")
  roomId          String?           @unique @map("room_id")
  maxParticipants Int?              @map("max_participants")
  status          LiveSessionStatus @default(SCHEDULED)
  recordingUrl    String?           @map("recording_url")
  createdAt       DateTime          @default(now()) @map("created_at")

  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@map("live_sessions")
}

// ================================
// NOTIFICATIONS
// ================================

model Notification {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  title     String
  message   String
  type      String
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

// ================================
// COMMUNITY
// ================================

model CommunityTag {
  id    String   @id @default(uuid())
  name  String   @unique
  posts CommunityPost_Tag[]

  @@map("community_tags")
}

model CommunityPost {
  id            String   @id @default(uuid())
  authorId      String   @map("author_id")
  title         String?
  content       String
  likes         Int      @default(0)
  bookmarks     Int      @default(0)
  commentsCount Int      @default(0) @map("comments_count")
  courseId      String?  @map("course_id")
  courseTitle   String?  @map("course_title")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  author   User                  @relation(fields: [authorId], references: [id], onDelete: Cascade)
  tags     CommunityPost_Tag[]
  media    CommunityMedia[]
  comments CommunityComment[]
  likes_   CommunityPostLike[]
  bookmarks_ CommunityPostBookmark[]

  @@map("community_posts")
}

model CommunityPost_Tag {
  postId String @map("post_id")
  tagId  String @map("tag_id")

  post CommunityPost  @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  CommunityTag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@map("community_post_tags")
}

model CommunityMedia {
  id    String @id @default(uuid())
  postId String @map("post_id")
  type  String // 'image' or 'video'
  url   String

  post CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("community_media")
}

model CommunityComment {
  id        String   @id @default(uuid())
  postId    String   @map("post_id")
  authorId  String   @map("author_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  post   CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  author User          @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("community_comments")
}

model CommunityPostLike {
  id     String @id @default(uuid())
  postId String @map("post_id")
  userId String @map("user_id")

  post CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@map("community_post_likes")
}

model CommunityPostBookmark {
  id     String @id @default(uuid())
  postId String @map("post_id")
  userId String @map("user_id")

  post CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@map("community_post_bookmarks")
}

model CommunityFollowing {
  id         String @id @default(uuid())
  followerId String @map("follower_id")
  followingId String @map("following_id")

  follower  User @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@map("community_following")
}
