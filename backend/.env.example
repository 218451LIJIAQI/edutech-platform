# ===========================================
# Edutech Platform - Backend Environment
# ===========================================

# Server
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/edutech"

# JWT Authentication
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=your-refresh-secret-at-least-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Security Configuration
# ===========================================

# CSRF Protection
# Used for double-submit cookie pattern
CSRF_SECRET=your-csrf-secret-at-least-32-characters-long

# Data Encryption
# Used for encrypting sensitive data (wallet info, bank details)
ENCRYPTION_KEY=your-encryption-key-at-least-32-chars

# ===========================================
# Redis Configuration (Caching & Queues)
# ===========================================

# Redis URL (leave empty to disable Redis features)
REDIS_URL=redis://localhost:6379

# Enable/disable Redis features
REDIS_ENABLED=true

# Enable/disable background job queue
QUEUE_ENABLED=true

# ===========================================
# External Services
# ===========================================

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email Service (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# File Storage (optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===========================================
# Error Monitoring (Sentry)
# ===========================================

# Sentry DSN (leave empty to disable)
# Only active in production mode
SENTRY_DSN=

# ===========================================
# Rate Limiting
# ===========================================

# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Max requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# ===========================================
# Frontend URL (for CORS)
# ===========================================
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173
SOCKET_CORS_ORIGIN=http://localhost:5173
