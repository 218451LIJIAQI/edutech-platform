{
  "name": "edutech-backend",
  "version": "1.0.0",
  "description": "Backend API for Edutech Platform",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register --files src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:setup": "prisma migrate deploy && prisma generate",
    "db:studio": "prisma studio",
    "script:recalculate-students": "ts-node -r tsconfig-paths/register scripts/recalculate-student-counts.ts",
    "script:migrate-wallet": "ts-node -r tsconfig-paths/register scripts/migrate-earnings-to-wallet.ts",
    "script:sync-earnings": "ts-node -r tsconfig-paths/register scripts/sync-historical-earnings.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "edutech",
    "api",
    "express",
    "typescript"
  ],
  "author": "Edutech Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@sentry/node": "^10.27.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.65.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "csrf-csrf": "^3.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.0.1",
    "helmet": "^6.2.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.6.0",
    "stripe": "^14.9.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.25",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/zxcvbn": "^4.4.4",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
