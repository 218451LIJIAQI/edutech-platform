# API Configuration
# Backend API URL (without trailing slash)
VITE_API_URL=http://localhost:3000/api/v1

# Stripe Configuration
# Get publishable key from https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Payment Mock Mode
# Set to 'true' to simulate payments on the frontend without calling Stripe
VITE_ENABLE_PAYMENT_MOCK=false

# Socket.io Configuration
VITE_SOCKET_URL=http://localhost:3000

# Community Service
# Set to 'false' to force using backend APIs (no local fallback)
VITE_COMMUNITY_FALLBACK=false

# App Configuration
VITE_APP_NAME=Edutech Platform
VITE_APP_VERSION=1.0.0

